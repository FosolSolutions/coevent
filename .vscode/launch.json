{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (api)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "api-build",
      "program": "${workspaceFolder}/api/server/bin/Debug/net6.0/Coevent.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/api/server",
      "stopAtEntry": false,
      // "serverReadyAction": {
      //   "action": "openExternally",
      //   "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      // },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "envFile": "${workspaceFolder}/api/.env",
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/api/server/Views"
      }
    },
    {
      "name": "Launch Edge - App",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:10004",
      "webRoot": "${workspaceFolder}/app",
      "preLaunchTask": "app-start",
      "browserLaunchLocation": "ui",
    },
    {
      "name": "Launch Yarn - App",
      "cwd": "${workspaceFolder}/app",
      "command": "yarn start",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Attach Edge - App",
      "port": 10004,
      "request": "attach",
      "type": "pwa-msedge",
      "webRoot": "${workspaceFolder}/app"
    },
  ]
}
